
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <FrameLayout
        android:id="@+id/courseFragmentID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.example.william.courserater.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/university_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginTop="@dimen/marginTopStandard"
                android:text="Find course"
                android:textSize="@dimen/headline"
                />

            <EditText
                android:id="@+id/country_edit_text"
                android:layout_width="320dp"
                android:layout_height="@dimen/editTextHeight"
                android:hint="Country"
                android:background="@drawable/edit_text_box3"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginTop="@dimen/marginTopStandard"
                android:textSize="@dimen/subline"
                android:paddingLeft="@dimen/marginSideStandard"
                />


            <ListView
                android:id="@+id/country_list_view"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginBottom="@dimen/marginTopStandard"
                android:layout_marginTop="-10px"
                android:background="@drawable/list_border"
                />


            <EditText
                android:id="@+id/university_edit_text"
                android:layout_width="320dp"
                android:layout_height="@dimen/editTextHeight"
                android:hint="University"
                android:background="@drawable/edit_text_box3"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginTop="@dimen/marginTopStandard"
                android:textSize="@dimen/subline"
                android:paddingLeft="@dimen/marginSideStandard"
                />

            <ListView
                android:id="@+id/university_list_view"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginBottom="@dimen/marginTopStandard"
                android:layout_marginTop="-10px"
                android:background="@drawable/list_border"
                />


            <EditText
                android:id="@+id/course_edit_text"
                android:layout_width="160dp"
                android:layout_height="@dimen/editTextHeight"
                android:hint="Search course"
                android:background="@drawable/edit_text_box3"
                android:layout_marginLeft="@dimen/marginSideStandard"
                android:layout_marginStart="@dimen/marginSideStandard"
                android:layout_marginTop="@dimen/marginTopStandard"
                android:textSize="@dimen/subline"
                android:paddingLeft="@dimen/marginSideStandard"
                />
            <RelativeLayout
                android:id="@+id/layoutForButtonToRight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/course_list_view"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/marginSideStandard"
                    android:layout_marginStart="@dimen/marginSideStandard"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/list_border"
                    />

                    <Button
                        android:id="@+id/viewCourseInformationButton"
                        android:layout_width="@dimen/buttonWidth"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_marginTop="@dimen/marginTopStandard"
                        android:layout_marginBottom="40dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/buttonTextSize"
                        android:text="View"
                        android:background="@drawable/button_shape"

                        android:textColor="@color/whiteish"/>

            </RelativeLayout>
        </LinearLayout>
    </com.example.william.courserater.VerticalScrollView>
    </FrameLayout>

</LinearLayout>
