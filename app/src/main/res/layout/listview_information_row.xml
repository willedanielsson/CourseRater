<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/informationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingLeft="@dimen/marginSideStandard"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginRight="100px"
        android:gravity="right">
        
        <ImageView
            android:id="@+id/starImageView"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/star_rating"
            />

        <TextView
            android:id="@+id/informationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/starImageView"
            android:layout_alignTop="@+id/starImageView"
            android:layout_alignRight="@+id/starImageView"
            android:layout_alignBottom="@+id/starImageView"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textSize="15dp"
            />

        <!--
        <TextView
            android:id="@+id/informationValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"


            />
            -->
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>